<%= content_tag :h1, "List of Plans" %>


<div class="text-end mb-3">
  <%= link_to new_plan_path, class: 'btn btn-primary' do %>
    New Plan
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

        <th>ID</th>
        <th>Name</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @plans.each do |plan| %>
        <tr>

        <td><%= plan.id %></td>
        <td>
          <%= plan.name %> (<%= plan.short_name %>) <br>
          <%= content_tag :span, class: "badge bg-primary" do %>
            <%= link_to plan.product_line.name, plan.product_line, class: "link-light" %>
          <% end %> 
          <%= content_tag :span, class: "badge bg-secondary" do %>
            <%= link_to plan.product_category.name, plan.product_category, class: "link-light" %>
          <% end %> 
        </td>
    
          <td>
            <%= link_to 'View', plan, class: 'btn' %>
            <%= link_to 'Edit', edit_plan_path(plan), class: 'btn' %>
            <%= link_to 'Delete', plan, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
