<%= content_tag :h1, "List of Anniv Types" %>


<div class="text-end mb-3">
  <%= link_to new_anniv_type_path, class: 'btn btn-primary' do %>
    New Anniv Type
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>ID</th>
        <th>Name</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @anniv_types.each do |anniv_type| %>
        <tr>

        <td><%= anniv_type.id %></td>
        <td><%= anniv_type.name %></td>
    
          <td>
            <%= link_to 'View', anniv_type, class: 'btn' %>
            <%= link_to 'Edit', edit_anniv_type_path(anniv_type), class: 'btn' %>
            <%= link_to 'Delete', anniv_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
