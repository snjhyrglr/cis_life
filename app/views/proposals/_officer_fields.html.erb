<div class="nested-fields mt-2 mb-2">
  <div class="card">
    <div class="card-body">
      <div class="row">
        <%= f.input :last_name, wrapper_html: { class: "col-md-3" } %>
        <%= f.input :first_name, wrapper_html: { class: "col-md-3" } %>
        <%= f.input :middle_name, wrapper_html: { class: "col-md-3" } %>
        <%= f.input :suffix, wrapper_html: { class: "col-md-3" } %>
      </div>
      <div class="row">
        <%= f.input :birth_day, wrapper_html: { class: "col-md-6" }, input_html: { data: { controller: "flatpickr",
        flatpickr_max_date: Time.zone.now,
        flatpickr_next_arrow: "Next",
        flatpickr_prev_arrow: "Prev" } } %>
        <%= f.input :designation, wrapper_html: { class: "col-md-6" } %>
      </div>
    </div>
    <div class="card-footer">
      <%= link_to_remove_association "remove officer", f, class: "btn btn-warning btn-sm" %>
    </div>
  </div>
</div>