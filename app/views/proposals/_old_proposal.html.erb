<header>
    <div class="pricing-header p-3 pb-md4 mx-auto text-center">
      <%= content_tag :h1, proposal.proposal_no, class: "display-4 fw-normal" %>  
    </div>
  </header>
  <main>
    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center justify-content-center">
      <% proposal.proposal_insureds.each do |pi| %>
        <div class="col mb-3">
          <div class="card card-mb-4 rounded-3 shadow-sm">
            <div class="card-header py-3">
              <%= content_tag :h4, pi.insured_type.name, class: "my-0 fw-normal" %>
            </div>
            <div class="card-body">
              <% pi.proposal_insured_benefits.each do |pib| %>
                <%= content_tag :h2, class: "card-title pricing-card-title mb-2" do %>
                  <%= content_tag :small, "#{pib.benefit.name} coverage - ", class: "text-muted fw-light" %>
                  <%= to_currency(pib.cov_amount) %>
                <% end %>
                <%= content_tag :h2, class: "card-title pricing-card-title mb-2" do %>
                  <%= content_tag :small, "Premium - ", class: "text-muted fw-light" %>
                  <%= to_currency(pib.premium) %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </main>