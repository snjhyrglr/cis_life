<!DOCTYPE html>
<html>
  <head>
    <title>CisLifeLogin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "active_admin", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link href="https://cdn.jsdelivr.net/npm/tom-select@2.0.3/dist/css/tom-select.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/tom-select@2.0.3/dist/css/tom-select.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

    <%= javascript_importmap_tags %>
    <%= javascript_include_tag "jquery" %>

    <script>
      $(function() {
        // limits the number of categories
        $('#officers').on('cocoon:after-insert', function() {
          check_to_hide_or_show_add_link();
        });

        $('#officers').on('cocoon:after-remove', function() {
          check_to_hide_or_show_add_link();
        });

        check_to_hide_or_show_add_link();

        function check_to_hide_or_show_add_link() {
          if ($('#officers .nested-fields:visible').length == 2) {
            $('#add-officer a').hide();
          } else {
            $('#add-officer a').show();
          }
        }
      })
    </script>
  </head>

  <body>
    <%= render "layouts/navbar" %>

    <div class="container">
      <div class="row">
        <div>
          <% if flash[:alert] %>
            <div class="alert alert-danger text-center"><%= flash[:alert] %></div>
          <% end %>

          <% if flash[:notice] %>
            <div class="alert alert-success text-center"><%= flash[:notice] %></div>
          <% end %>
        </div>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
