<%= content_tag :h1, "List of Member Dependents" %>


<div class="text-end mb-3">
  <%= link_to new_member_dependent_path, class: 'btn btn-primary' do %>
    New Member Dependent
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>ID</th>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Middle Name</th>
        <th>Suffix</th>
        <th>Birthdate</th>
        <th>Member</th>
        <th>Relationship</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @member_dependents.each do |member_dependent| %>
        <tr>

        <td><%= member_dependent.id %></td>
        <td><%= member_dependent.last_name %></td>
        <td><%= member_dependent.first_name %></td>
        <td><%= member_dependent.middle_name %></td>
        <td><%= member_dependent.suffix %></td>
        <td><%= member_dependent.birthdate %></td>
        <td><%= member_dependent.member %></td>
        <td><%= member_dependent.relationship %></td>
    
          <td>
            <%= link_to 'View', member_dependent, class: 'btn' %>
            <%= link_to 'Edit', edit_member_dependent_path(member_dependent), class: 'btn' %>
            <%= link_to 'Delete', member_dependent, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
