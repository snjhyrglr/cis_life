<%= content_tag :h1, "List of Product Lines" %>


<div class="text-end mb-3">
  <%= link_to new_product_line_path, class: 'btn btn-primary' do %>
    New Product Line
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>ID</th>
        <th>Name</th>
        <th>Code</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @product_lines.each do |product_line| %>
        <tr>

        <td><%= product_line.id %></td>
        <td><%= product_line.name %></td>
        <td><%= product_line.code %></td>
    
          <td>
            <%= link_to 'View', product_line, class: 'btn' %>
            <%= link_to 'Edit', edit_product_line_path(product_line), class: 'btn' %>
            <%= link_to 'Delete', product_line, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
