<%= content_tag :h1, "List of Product Categories" %>


<div class="text-end mb-3">
  <%= link_to new_product_category_path, class: 'btn btn-primary' do %>
    New Product Category
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>ID</th>
        <th>Product Line</th>
        <th>Name</th>
        <th>Code</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @product_categories.each do |product_category| %>
        <tr>

        <td><%= product_category.id %></td>
        <td><%= product_category.product_line %></td>
        <td><%= product_category.name %></td>
        <td><%= product_category.code %></td>
    
          <td>
            <%= link_to 'View', product_category, class: 'btn' %>
            <%= link_to 'Edit', edit_product_category_path(product_category), class: 'btn' %>
            <%= link_to 'Delete', product_category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
