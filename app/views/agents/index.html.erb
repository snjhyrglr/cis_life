<%= content_tag :h1, "List of Agents" %>


<div class="text-end mb-3">
  <%= link_to new_agent_path, class: 'btn btn-primary' do %>
    New Agent
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

        <th>ID</th>
        <th>Name</th>
        <th>Details</th>
        <th>Mobile Number</th>
        <th>Agent Group</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @agents.each do |agent| %>
        <tr>

          <td><%= agent.id %></td>
          <td>
            <%= content_tag :div do %>
              <%= content_tag :span, agent, class: "lead fw-bold" %> <br>
              <%= content_tag :small, agent.agent_position, class: "badge text-primary" %>
            <% end %>
          </td>
          <td><%= agent.birthdate %></td>
          <td><%= agent.mobile_number %></td>
          <td>
            <%= content_tag :p, agent.agent_group, class: "lead" %>
          </td>
    
          <td>
            <%= link_to 'View', agent, class: 'btn' %>
            <%= link_to 'Edit', edit_agent_path(agent), class: 'btn' %>
            <%= link_to 'Delete', agent, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
