<%= content_tag :h1, "List of Officers" %>


<div class="text-end mb-3">
  <%= link_to new_officer_path, class: 'btn btn-primary' do %>
    New Officer
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>ID</th>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Middle Name</th>
        <th>Suffix</th>
        <th>Birth Day</th>
        <th>Designation</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @officers.each do |officer| %>
        <tr>

        <td><%= officer.id %></td>
        <td><%= officer.last_name %></td>
        <td><%= officer.first_name %></td>
        <td><%= officer.middle_name %></td>
        <td><%= officer.suffix %></td>
        <td><%= officer.birth_day %></td>
        <td><%= officer.designation %></td>
    
          <td>
            <%= link_to 'View', officer, class: 'btn' %>
            <%= link_to 'Edit', edit_officer_path(officer), class: 'btn' %>
            <%= link_to 'Delete', officer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
