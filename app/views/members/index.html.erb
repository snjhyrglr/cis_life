<%= content_tag :h1, "List of Members" %>


<div class="text-end mb-3">
  <%= link_to new_member_path, class: 'btn btn-primary' do %>
    New Member
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>ID</th>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Middle Name</th>
        <th>Suffix</th>
        <th>Birthdate</th>
        <th>Mobile No</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Occupation</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @members.each do |member| %>
        <tr>

        <td><%= member.id %></td>
        <td><%= member.last_name %></td>
        <td><%= member.first_name %></td>
        <td><%= member.middle_name %></td>
        <td><%= member.suffix %></td>
        <td><%= member.birthdate %></td>
        <td><%= member.mobile_no %></td>
        <td><%= member.email %></td>
        <td><%= member.gender %></td>
        <td><%= member.occupation %></td>
    
          <td>
            <%= link_to 'View', member, class: 'btn' %>
            <%= link_to 'Edit', edit_member_path(member), class: 'btn' %>
            <%= link_to 'Delete', member, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
